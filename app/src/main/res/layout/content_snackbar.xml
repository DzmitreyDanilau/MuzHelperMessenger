<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/colorPrimary"
    android:padding="@dimen/default_pading">

    <ImageView
        android:id="@+id/snackBarImage"
        android:layout_width="@dimen/snackBar_image_width"
        android:layout_height="@dimen/snackBar_image_height"
        android:layout_marginStart="@dimen/default_margin"
        android:contentDescription="@string/image_content_dec_snackBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_cancel_cross" />

    <TextView
        android:id="@+id/snackBarText"
        style="@style/BaseTextViewStyle"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/snackBarImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/snackBarImage"
        app:layout_constraintTop_toTopOf="@id/snackBarImage"
        tools:text="@string/tools_registration_failed_text" />

</androidx.constraintlayout.widget.ConstraintLayout>