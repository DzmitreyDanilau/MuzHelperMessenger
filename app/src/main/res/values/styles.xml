<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--                            BASE STYLES                            -->

    <!--Base Input Layout-->
    <style name="InputLayoutBaseTheme">
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="background">@color/transparent</item>
        <item name="android:layout_marginStart">@dimen/default_double_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_double_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Base TextView style -->
    <style name="BaseTextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/default_quarter_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_quarter_margin</item>
    </style>

    <!--                           APP VIEWS STYLES                            -->


</resources>
